<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<link  href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">

<!-- <p id="notice"><%#= notice %></p> -->
<div class="min-height">
  <h1 class="top-mobile-screen">Parts</h1>
  <span>
    <%= form_tag products_path, :method => 'get' do %>
      <div class="row">
        <div class="col-sm-12 col-xs-12 col-md-3 col-lg-2">
          <%= text_field_tag :search, params[:search], id: 'search' %>
        </div>
        <div class="col-sm-12 col-xs-12 col-md-7 col-lg-4">  
          <div class="row">
            <div class="col-xs-6 col-sm-6 col-md-5 col-lg-3">
              <%= submit_tag "Search", :name => nil, class: "btn btn-primary btn-custom-class" %>
            </div>
            
            <div class="col-xs-6 col-sm-6 col-md-5 col-lg-3">
              <%= button_tag 'CLEAR', id: 'clear_form_button', class: "btn btn-warning btn-custom-class" %>
            </div>
          </div> 
        </div>
      </div>
    <% end %>
    <%= javascript_pack_tag 'clear' %>
  </span>

  <% if current_user.try(:type) == 'AdminUser' %>
    <span class="new_product">
      <%= link_to 'New Product', new_product_path %>
    </span>
  <% end %>
  <br>
  <table class='table table-striped table-responsive-md btn-table'>
    <%= form_with url: print_labels_products_url, local: true, method: :post do |form| %>
    <thead>
      <tr class="sort-table">
        <th class="hide-content hide-medium">ID</th>
        <% if current_user.try(:type) == 'AdminUser' || current_user.try(:type) == 'SuperUser' %>
          <th class="hide-content">
            <input type="checkbox" id="selectAll" value="selectAll">
            <%= form.submit "Labels", data: { disable_with: false } %>
          </th>
        <% end %>
        <th><%= sortable "item_no", "Item #" %></th>
        <th><%= sortable "description" %></th>
        <th class="hide-content"><%= sortable "supplier_number", "Supplier #" %></th>
        <th><%= sortable "qty" %></th>
        <th class="hide-content"><%= sortable "location" %></th>
        <th class="hide-content hide-medium"><%= sortable "supplier_name" %></th>
        <th><%= sortable "status" %></th>
        <!-- <th>QR-Code</th> -->
        <% if current_user.try(:type) == 'AdminUser' || current_user.try(:type) == 'SuperUser' %>
          <th class="hide-content" colspan="2"></th>
        <% end %>  
      </tr>
    </thead>
  <!---------------- check all checkboxes --------------->
    <script type='text/javascript'>
      $('#selectAll').click(function() {
         if (this.checked) {
             $(':checkbox').each(function() {
                 this.checked = true;                        
             });
         } else {
            $(':checkbox').each(function() {
                 this.checked = false;                        
             });
         } 
      });
    </script>
  <!---------------- check all checkboxes --------------->

    <tbody>
      
      <% @products.each do |product| %>
        <%# if product.status == "active" %>
        <% if !product.image? %>
          <tr class="no_mage_table_color">
        <% elsif product.status != "active" %>
          <tr style="background-color: #ffa791;" >
        <% else %>
          <tr>
        <% end %>
            <td class="hide-content hide-medium"><%= product.id %></td>
            <% if current_user.try(:type) == 'AdminUser' || current_user.try(:type) == 'SuperUser' %>
              <td>
                <% if product.status == "active" %>
                  <%= form.check_box :products_ids, {multiple: true}, product.id %>
                <% end %>    
              </td>
            <% end %>
            <td><%=  link_to truncate(product.item_no.truncate(22)).html_safe, product %></td>
            <td><%= link_to truncate(product.description.truncate(22)).capitalize.html_safe, product %></td>
            <td class="hide-content"><%= product.supplier_number %></td>
            <td><%= product.qty %></td>
            <td class="hide-content"><%= product.location %></td>
            <td class="hide-content hide-medium"><%= product.supplier_name %></td>
            <!-- <td><%#= QrCode.call(product_url(product))%></td> -->
            <% if current_user.try(:type) != 'AdminUser' && current_user.try(:type) != 'SuperUser' %>
              <td><%= link_to 'Use', use_product_path(product), class: "btn btn-primary" %></td>
            <% end %>
            <!-- <td>
              <%#= link_to 'Show', product %>
            </td> -->
            <% if current_user.try(:type) == 'AdminUser' || current_user.try(:type) == 'SuperUser' %>

              <td class="hide-content">
                <%= link_to edit_product_path(product) do%>
                  <i class="fa fa-edit" width="50px" height="50px"></i>  
                <% end %>
              </td>
              <td>
                <%= link_to "Delete", product, method: :delete, data: { confirm: 'Are you sure you want to delete record?' }, class: "btn btn-danger btn-sm"%>
              </td>
            <% end %>
          </tr>
        <% end %>

      <% end %>
    </tbody>
  </table>
  <%= will_paginate(@products, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>

</div>





